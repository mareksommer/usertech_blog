{% extends 'admin/layout.html.twig' %}

{% block main %}
    <div id="wrapper">
        <div id="container">
            <h1>Posts</h1>
            <table class="table table-striped table-middle-aligned">
                <thead>
                    <tr>
                        <th scope="col">Title</th>
                        <th scope="col">Date</th>
                        <th scope="col">Views</th>
                        <th scope="col">Visible</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                {% for post in posts %}
                    <tr>
                        <td>{{ post.title }}</td>
                        <td>{{ post.date|date('d .m. Y') }}</td>
                        <td>{{ post.viewsCount }}</td>
                         <td>{{ post.isActive ? 'Yes':'No' }}</td>
                        <td class="text-right">
                            <div class="item-actions">
                                <a href="{{ path('admin_edit_post', {id: post.id}) }}" class="btn btn-sm btn-default">
                                    edit
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" align="center">No posts found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}


